<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="product"
            type="woowacourse.shopping.presentation.model.ProductModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="314dp"
        android:minHeight="150dp">

        <TextView
            android:id="@+id/tv_product_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{product.title}"
            android:textColor="@color/product_info_text_color"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_product_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(product.price)}"
            android:textColor="@color/product_info_text_color"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_product_detail_title"
            app:layout_constraintTop_toBottomOf="@id/tv_product_detail_title" />

        <woowacourse.shopping.presentation.view.common.ProductCounterView
            android:id="@+id/product_detail_fragment_counter_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,126:42"
            app:layout_constraintEnd_toEndOf="@id/tv_product_detail_title"
            app:layout_constraintTop_toBottomOf="@id/tv_product_detail_title"
            app:layout_constraintWidth_percent="0.4" />

        <Button
            android:id="@+id/bt_product_detail_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/product_button_color"
            android:text="@string/product_detail_store_text"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,290:40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>