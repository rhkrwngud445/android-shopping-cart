<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cartItem"
            type="woowacourse.shopping.presentation.model.CartProductModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/iv_product_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="@color/product_info_text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/iv_product_thumbnail"
            app:layout_constraintStart_toStartOf="@id/iv_product_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/iv_product_thumbnail"
            tools:text="PET보틀-정사각형" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="@color/product_info_text_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/iv_product_thumbnail"
            app:layout_constraintStart_toStartOf="@id/iv_product_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/tv_product_title"
            tools:text="10,000원" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_product_thumbnail"
            app:layout_constraintDimensionRatio="H,126:42"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/bt_product_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/drawable_oval"
            android:gravity="center"
            android:text="@string/item_cart_list_plus"
            android:textSize="80sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_product_thumbnail"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.31" />

        <include
            android:id="@+id/layout_product_list_order_count"
            layout="@layout/layout_order_count"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_product_thumbnail"
            app:layout_constraintDimensionRatio="H,126:42"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            bind:cartItem="@{cartItem}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

